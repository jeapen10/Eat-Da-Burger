<div class="container">
    <div class="row">
        <h1>Eat Da Burger!</h1>
    </div>
    
    <div class="row">
        {{#each burger_data}}
            {{#unless this.devoured}}
            <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
    <div class="form group">
        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">Devour it!</button>
        </form>
    </div>
        {{/unless}}
        {{/each}}
    </div>

    <div class="row">
        {{#each burger_data}}
            {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}">
            {{/if}}
        {{/each}}
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control" id="burger-input">
            <button type="submit" class="btn btn-primary" id="burger-input-button">Add Burger</button>
        </form>
        <p>Enter a Burger you want to eat!</p>
    </div>
</div>


